        <rules>
            <name>Activity_Date_is_null</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>isActivityDateNull</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Activity_Date_to_today</targetReference>
            </connector>
            <label>Activity Date is null</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>isActivityDateNull</name>
        <dataType>Boolean</dataType>
        <expression>ISNULL ( {!$Record.ActivityDate} ) &amp;&amp; ({!$Record.ActivityDate} &gt;TODAY()) ||  ISCHANGED({!$Record.Status} ) &amp;&amp; ISPICKVAL({!$Record.Status} , &apos;Completed&apos;)  &amp;&amp; {!$Permission.Arbeidsgiver}</expression>
    </formulas>
    <formulas>
