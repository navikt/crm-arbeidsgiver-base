<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Muligheter Listevisning</masterLabel>
    <description>Konfigurerbar komponent som viser en liste over muligheter fra en spesifisert listevisning. Støtter navigering til detaljer og handlinger som redigering og opprettelse av nye records.</description>
    <targets>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property name="previewRecords" type="Integer" default="4" label="Maks antall records" description="Maks antall records å vise" />
            <property name="listViewApiName" type="String" default="TAG_Mine_pne_muligheter" label="List View API Name" description="List view navn for å hente records" />
            <property name="objectApiName" type="String" default="CustomOpportunity__c" label="Object API Name" description="API navn på objektet" />
            <property name="helpText" type="String" default="Dette er en hjelpetekst for komponentet." label="Hjelpetekst" description="Hjelpetekst for komponentet" />
            <property name="titleText" type="String" default="Mine muligheter" label="Tittel" description="Tittel for komponentet" />
            <property name="iconName" type="String" default="custom:custom14" label="Ikon" description="Standard ikon for muligheter" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>