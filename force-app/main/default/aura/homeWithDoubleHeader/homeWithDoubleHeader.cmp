<aura:component implements="lightning:homeTemplate" access="global">
    <aura:attribute name="header1" type="Aura.Component[]" />
    <aura:attribute name="header3" type="Aura.Component[]" />
    <aura:attribute name="row1col1" type="Aura.Component[]" />
    <aura:attribute name="row1col2" type="Aura.Component[]" />
    <aura:attribute name="row1col3" type="Aura.Component[]" />
    <aura:attribute name="row1col4" type="Aura.Component[]" />
    <aura:attribute name="header2" type="Aura.Component[]" />
    <aura:attribute name="row2col1" type="Aura.Component[]" />
    <aura:attribute name="row2col2" type="Aura.Component[]" />
    <aura:attribute name="row2col3" type="Aura.Component[]" />
    <aura:attribute name="row2col4" type="Aura.Component[]" />

    <!-- Grid -->
    <div class="slds-grid slds-wrap slds-gutters_direct-x-small">
        <!-- Top left section -->
        <div class="slds-col slds-size_1-of-1 slds-large-size_9-of-12">
            <!-- Header row -->
            <div class="slds-col slds-size_1-of-1">{! v.header1 }</div>
            <!-- Nested grid -->
            <div class="slds-grid slds-wrap slds-gutters_direct-x-small">
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_4-of-12 slds-p-bottom_small"
                >
                    {! v.row1col1 }
                </div>
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_4-of-12 slds-p-bottom_small"
                >
                    {! v.row1col2 }
                </div>
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_4-of-12 slds-p-bottom_small"
                >
                    {! v.row1col3 }
                </div>
            </div>
        </div>
        <!-- Top right section -->
        <div class="slds-col slds-size_1-of-1 slds-large-size_3-of-12">
            <!-- Header row -->
            <div class="slds-col slds-size_1-of-1">{! v.header3 }</div>
            <!-- Nested grid -->
            <div class="slds-grid slds-wrap slds-gutters_direct-x-small">
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_1-of-1 slds-p-bottom_small"
                >
                    {! v.row1col4 }
                </div>
            </div>
        </div>
        <!-- Bottom section -->
        <div class="slds-col slds-size_1-of-1">
            <!-- Header row -->
            <div class="slds-col slds-size_1-of-1">{! v.header2 }</div>
            <!-- Nested grid -->
            <div class="slds-grid slds-wrap slds-gutters_direct-x-small">
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_3-of-12 slds-p-bottom_small"
                >
                    {! v.row2col1 }
                </div>
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_3-of-12 slds-p-bottom_small"
                >
                    {! v.row2col2 }
                </div>
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_3-of-12 slds-p-bottom_small"
                >
                    {! v.row2col3 }
                </div>
                <div
                    class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_3-of-12 slds-p-bottom_small"
                >
                    {! v.row2col4 }
                </div>
            </div>
        </div>
    </div>
</aura:component>
